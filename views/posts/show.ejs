<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/styles/show.css" />

<div class="row d-flex justify-content-center">
  <div class="col-5">
    <div
      id="carouselExample"
      class="carousel slide d-flex justify-content-center"
    >
      <div class="carousel-inner">
        <% post.images.forEach((img,i) => { %>
        <div class="carousel-item <%= i === 0 ?'active' : ''%>">
          <img
            src="<%=img.url %>"
            class="img-fluid img-thumbnail"
            id="img-custom"
            alt="..."
          />
        </div>
        <% }) %>
      </div>
      <button
        class="carousel-control-prev"
        type="button"
        data-bs-target="#carouselExample"
        data-bs-slide="prev"
      >
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button
        class="carousel-control-next"
        type="button"
        data-bs-target="#carouselExample"
        data-bs-slide="next"
      >
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>
  <div class="col-6">
    <div class="card mb-3">
      <div class="card-body">
        <h1 class="card-title mb-4"><%= post.title%></h1>
        <h5 class="card-text d-inline">Discription:</h5>
        <p class="card-text d-inline"><%= post.description%></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= post.location%></li>

        <li class="list-group-item">Price: $<%= post.price%></li>
        <li class="list-group-item">Breed: <%= post.breed%></li>
        <li class="list-group-item">Category: <%= post.category%></li>
      </ul>
      <% if(currentUser && currentUser._id.equals(post.author._id)){ %>
      <div class="card-body">
        <a class="card-link btn btn-info" href="/posts/<%=post._id%>/edit"
          >Edit</a
        >
        <form
          class="d-inline"
          action="/posts/<%=post._id%>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
      <% } %>

      <div class="card-footer text-muted">by <%= post.author.username %></div>
    </div>
  </div>
</div>
